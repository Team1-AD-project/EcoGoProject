<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRouteOption"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 路线摘要 -->
        <TextView
            android:id="@+id/tvRouteSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="地铁1号线 → 公交46路" />

        <!-- 路线信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <!-- 时长 -->
            <TextView
                android:id="@+id/tvRouteTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#666666"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@android:drawable/ic_menu_recent_history"
                app:drawableTint="#666666"
                tools:text="28 分钟" />

            <!-- 距离 -->
            <TextView
                android:id="@+id/tvRouteDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#666666"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                app:drawableTint="#666666"
                tools:text="5.2 公里" />

            <!-- 碳排放 -->
            <TextView
                android:id="@+id/tvRouteCarbon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                tools:text="0.26 kg" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
