<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Step 0: Personal Info Layout -->
    <ScrollView
        android:id="@+id/layout_personal_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:id="@+id/text_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell us about yourself"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/text_info_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp"
                android:text="We'll personalize your EcoGo experience"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <View
                    android:id="@+id/progress_step1"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@color/primary"
                    android:alpha="1.0" />

                <View
                    android:id="@+id/progress_step2"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/border"
                    android:alpha="0.3" />

                <View
                    android:id="@+id/progress_step3"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@color/border"
                    android:alpha="0.3" />
            </LinearLayout>

            <!-- Username Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nickname"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@drawable/ic_person"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Email Address"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@drawable/ic_email"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

        <!-- NUSNET ID Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_nusnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="NUSNET ID"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_id_card"
            app:helperText="e.g., e0123456"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_nusnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Password"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_key"
            app:endIconMode="password_toggle"
            app:helperText="At least 6 characters"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Confirm Password"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_key"
            app:endIconMode="password_toggle"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_to_faculty"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Next: Choose Faculty"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_chevron_right"
                app:iconGravity="end"
                app:backgroundTint="@color/primary"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </ScrollView>

    <!-- Step 1: Faculty Selection Layout (Swipe Cards) -->
    <LinearLayout
        android:id="@+id/layout_faculty_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Faculty"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Swipe left or right to explore, tap to select"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@color/primary"
                android:alpha="1.0" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/primary"
                android:alpha="1.0" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@color/border"
                android:alpha="0.3" />
        </LinearLayout>

        <!-- Faculty Page Indicator -->
        <TextView
            android:id="@+id/text_page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="1 / 6"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:alpha="0.7" />

        <!-- ViewPager2 for Faculty Cards -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_faculties"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:overScrollMode="never" />

        <!-- Swipe Hint -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† Swipe to explore â†’"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:alpha="0.6" />

        </LinearLayout>

    </LinearLayout>

    <!-- Step 2: Transport Preference Layout -->
    <include
        android:id="@+id/layout_transport_preference"
        layout="@layout/layout_transport_preference" />

    <!-- Step 3: Common Locations Layout -->
    <include
        android:id="@+id/layout_common_locations"
        layout="@layout/layout_common_locations" />

    <!-- Step 4: Interests & Goals Layout -->
    <include
        android:id="@+id/layout_interests_goals"
        layout="@layout/layout_interests_goals" />

    <!-- Step 5: Mascot Reveal Layout -->
    <ScrollView
        android:id="@+id/layout_mascot_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:id="@+id/text_reveal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're all set!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_reveal_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Meet your new buddy."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@color/primary"
                    android:alpha="1.0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/primary"
                    android:alpha="1.0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@color/primary"
                    android:alpha="1.0" />
            </LinearLayout>

            <!-- Large Mascot Display -->
            <com.ecogo.ui.views.MascotLionView
                android:id="@+id/mascot_reveal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp" />

            <!-- Faculty Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/view_faculty_color"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_shape" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_faculty_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Engineering"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/text_faculty_slogan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Building the Future ðŸ› ï¸"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Outfit Preview -->
            <TextView
                android:id="@+id/text_outfit_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Starter Outfit: Safety Helmet, Engin Plaid"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_lets_go"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Let's Go!"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_chevron_right"
                app:iconGravity="end"
                app:backgroundTint="@color/primary"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
