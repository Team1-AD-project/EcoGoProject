<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Step 0: Personal Info Layout -->
    <ScrollView
        android:id="@+id/layout_personal_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==================== HEADER ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_monthly_header"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Tell us about yourself"
                    android:textColor="@color/text_white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_info_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:alpha="0.85"
                    android:text="We'll personalize your EcoGo experience"
                    android:textColor="@color/text_white"
                    android:textSize="14sp" />

                <!-- Progress Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/progress_step1"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="#A7F3D0" />

                    <View
                        android:id="@+id/progress_step2"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:alpha="0.3"
                        android:background="#A7F3D0" />

                    <View
                        android:id="@+id/progress_step3"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:alpha="0.3"
                        android:background="#A7F3D0" />
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== CONTENT ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Username Field -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_username"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="Nickname"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:startIconDrawable="@drawable/ic_person">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Email Field -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_email"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="Email Address"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:startIconDrawable="@drawable/ic_email">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- NUSNET ID Field -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_nusnet"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="NUSNET ID"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:helperText="e.g., e0123456"
                            app:startIconDrawable="@drawable/ic_id_card">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_nusnet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Password Field -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_password"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="Password"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:endIconMode="password_toggle"
                            app:helperText="At least 6 characters"
                            app:startIconDrawable="@drawable/ic_key">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Confirm Password Field -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_confirm_password"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm Password"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusTopStart="14dp"
                            app:endIconMode="password_toggle"
                            app:startIconDrawable="@drawable/ic_key">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Next Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next_to_faculty"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:text="Next: Choose Faculty"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_chevron_right"
                    app:iconGravity="end" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Step 1: Faculty Selection Layout (Swipe Cards) -->
    <LinearLayout
        android:id="@+id/layout_faculty_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_monthly_header"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Faculty"
                android:textColor="@color/text_white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.85"
                android:text="Swipe left or right to explore, tap to select"
                android:textColor="@color/text_white"
                android:textSize="14sp" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="#A7F3D0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="#A7F3D0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:alpha="0.3"
                    android:background="#A7F3D0" />
            </LinearLayout>
        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp">

            <!-- Faculty Page Indicator -->
            <TextView
                android:id="@+id/text_page_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_section_title_icon"
                android:paddingStart="14dp"
                android:paddingTop="4dp"
                android:paddingEnd="14dp"
                android:paddingBottom="4dp"
                android:text="1 / 6"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- ViewPager2 for Faculty Cards -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_faculties"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never" />

            <!-- Swipe Hint -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:text="â† Swipe to explore â†’"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Step 2: Transport Preference Layout -->
    <include
        android:id="@+id/layout_transport_preference"
        layout="@layout/layout_transport_preference" />

    <!-- Step 3: Common Locations Layout -->
    <include
        android:id="@+id/layout_common_locations"
        layout="@layout/layout_common_locations" />

    <!-- Step 4: Interests & Goals Layout -->
    <include
        android:id="@+id/layout_interests_goals"
        layout="@layout/layout_interests_goals" />

    <!-- Step 5: Mascot Reveal Layout -->
    <ScrollView
        android:id="@+id/layout_mascot_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_monthly_header"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="80dp">

                <TextView
                    android:id="@+id/text_reveal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="You're all set!"
                    android:textColor="@color/text_white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_reveal_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:alpha="0.85"
                    android:gravity="center"
                    android:text="Meet your new buddy."
                    android:textColor="@color/text_white"
                    android:textSize="15sp" />

                <!-- Progress Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="#A7F3D0" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="#A7F3D0" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="#A7F3D0" />
                </LinearLayout>
            </LinearLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp">

                <!-- Large Mascot Display -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="90dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp">

                    <com.ecogo.ui.views.MascotLionView
                        android:id="@+id/mascot_reveal"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Faculty Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <View
                            android:id="@+id/view_faculty_color"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="14dp"
                            android:background="@drawable/circle_shape" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_faculty_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engineering"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_faculty_slogan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Building the Future ðŸ› ï¸"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Outfit Preview -->
                <TextView
                    android:id="@+id/text_outfit_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Starter Outfit: Safety Helmet, Engin Plaid"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_lets_go"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Let's Go!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_chevron_right"
                    app:iconGravity="end" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
