<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/border"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="16dp"
        android:paddingEnd="14dp"
        android:paddingBottom="16dp">

        <!-- Icon with rounded square background -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/text_stat_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_stat_icon_rounded"
                android:gravity="center"
                android:text="â­"
                android:textSize="22sp" />
        </FrameLayout>

        <!-- Stat value -->
        <TextView
            android:id="@+id/text_stat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="880"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Stat title -->
        <TextView
            android:id="@+id/text_stat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Total Points"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <!-- Stat subtitle / trend -->
        <TextView
            android:id="@+id/text_stat_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_section_title_icon"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp"
            android:text="+150 this week"
            android:textColor="@color/primary"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
