            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#BBF7D0"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

