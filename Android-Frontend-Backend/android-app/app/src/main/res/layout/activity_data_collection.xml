<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ML Data Collection"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your current transport mode, then start recording sensor data.\nRecommended recording time: 10-20 minutes per mode."
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:gravity="center"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Transport mode selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select transport mode:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTransportMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        android:layout_marginBottom="24dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWalking"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCycling"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cycling"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBus"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSubway"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subway"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDriving"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driving"/>

    </com.google.android.material.chip.ChipGroup>

    <!-- Recording status -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recording Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvRecordingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Started"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvRecordingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 00:00"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvWindowCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Windows collected: 0"
                android:textSize="14sp"
                android:textColor="@color/gray_600"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Control buttons -->
    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start Recording"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/green_primary"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnExportData"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Export Training Data"
        android:textSize="16sp"
        android:backgroundTint="@color/blue_500"
        android:enabled="false"/>

    <!-- Data statistics -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Statistics"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvDataStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Walking: 0 windows\nCycling: 0 windows\nBus: 0 windows\nSubway: 0 windows\nDriving: 0 windows"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>
