<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="4dp">

    <!-- Step Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Step Icon -->
        <ImageView
            android:id="@+id/ivStepIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_walking"
            android:contentDescription="Step icon" />

        <!-- Step Instruction Text -->
        <TextView
            android:id="@+id/tvStepInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#000000"
            tools:text="Walk to bus stop" />

    </LinearLayout>

    <!-- Distance and Duration -->
    <TextView
        android:id="@+id/tvStepDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:textSize="11sp"
        android:textColor="#666666"
        tools:text="250 m Â· 3 min" />

    <!-- Transit Details (TRANSIT steps only) -->
    <LinearLayout
        android:id="@+id/layoutTransitDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        android:background="#F0F0F0">

        <!-- Line Name -->
        <TextView
            android:id="@+id/tvLineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            tools:text="Metro Line 1" />

        <!-- Departure Stop -->
        <TextView
            android:id="@+id/tvDepartureStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="#333333"
            tools:text="Board: Station A" />

        <!-- Arrival Stop -->
        <TextView
            android:id="@+id/tvArrivalStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textColor="#333333"
            tools:text="Alight: Station B (2 stops)" />

        <!-- Direction / Headsign -->
        <TextView
            android:id="@+id/tvHeadsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textColor="#666666"
            android:visibility="gone"
            tools:text="Towards Terminal Station" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0" />

</LinearLayout>
