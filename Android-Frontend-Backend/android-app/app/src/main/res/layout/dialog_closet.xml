<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- ═══════ Top: Mascot lion preview area (adaptive height) ═══════ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <!-- Close button -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:contentDescription="Close"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            app:tint="@color/text_secondary" />

        <!-- Mascot lion -->
        <com.ecogo.ui.views.MascotLionView
            android:id="@+id/mascot_closet"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal" />

        <!-- Current outfit info -->
        <TextView
            android:id="@+id/text_outfit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Current Outfit"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_outfit_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="Tap items below to change"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- ═══════ Bottom: Tab + Item list (fill remaining space) ═══════ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_closet_bottom"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">

        <!-- Tab button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tab_all_clothes"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:text="All Clothes"
                android:textAllCaps="false"
                android:textSize="13sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tab_faculty_clothes"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="Faculty Clothes"
                android:textAllCaps="false"
                android:textSize="13sp"
                app:backgroundTint="@color/surface"
                app:cornerRadius="12dp"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <!-- Item grid container (for clipping slide animations) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:clipChildren="true"
            android:clipToPadding="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_closet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
