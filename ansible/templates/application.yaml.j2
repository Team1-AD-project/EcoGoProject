spring:
  data:
    mongodb:
      uri: {{ mongodb_uri }}
      database: EcoGo

logging:
  level:
    com.example.EcoGo: info
    org.springframework.data.mongodb: info
  file:
    name: logs/eco-go.log
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"

server:
  port: 8090
  servlet:
    context-path: /api
  compression:
    enabled: true
    min-response-size: 1024

management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics,prometheus
      base-path: /actuator
  endpoint:
    health:
      show-details: always
    metrics:
      enabled: true
    prometheus:
      enabled: true
  metrics:
    export:
      prometheus:
        enabled: true
    tags:
      application: ecogo
      environment: {{ app_environment }}

info:
  app:
    name: EcoGo
    description: Eco-friendly carbon tracking application
    version: 1.0.0
    environment: {{ app_environment }}
